@page "/Projects/{projectid?}/Tickets/{id?}"
@model Tracker.Pages.Tickets.TicketModel

@{
	ViewData["Title"] = "Ticket";
	Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Ticket</h1>

<div>
	<h4>Ticket</h4>
	<hr />
	<dl class="row">
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Ticket.Project)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Ticket.Project.Name)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Ticket.Title)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Ticket.Title)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Ticket.Description)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Ticket.Description)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Ticket.Priority)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Ticket.Priority)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Ticket.Type)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Ticket.Type.Type)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Ticket.Status)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Ticket.Status.Status)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Ticket.Submitter)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Ticket.Submitter.UserName)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Ticket.Assignee)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Ticket.Assignee.UserName)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Ticket.Created)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Ticket.Created)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Ticket.Closed)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Ticket.Closed)
		</dd>
	</dl>
</div>

<div>
	<form method="post">
		<input type="hidden" asp-for="Id" value="@Model.Ticket.Id"/>
		<input type="submit" class="btn btn-primary" name="closeticket" value="Close" />
	</form>
	<a asp-page="./Index" asp-route-projectid="@Model.Ticket.ProjectId" class="btn btn-primary">Back to List</a> |
	<a asp-page="./Edit" asp-route-id="@Model.Ticket.Id" asp-route-projectid="@Model.Ticket.ProjectId" class="btn btn-primary">Edit</a> |
	<a asp-page="./Delete" asp-route-id="@Model.Ticket.Id" asp-route-projectid="@Model.Ticket.ProjectId" class="btn btn-primary">Delete</a>
</div>

<div>
	<component type="typeof(Comments.Comments)" render-mode="Server" param-CommentList="@Model.Ticket.Comments.ToList()" />
</div>