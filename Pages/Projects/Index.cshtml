@page
@model Tracker.Pages.Projects.IndexModel

@{
	ViewData["Title"] = "Index";
	Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Projects</h1>

<p>
	<a asp-page="Create" class="btn btn-primary">New Project +</a>
</p>
<table class="table">
	<thead>
		<tr>
			<th>
				@Html.DisplayNameFor(model => model.Project[0].Name)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Project[0].Description)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Project[0].Created)
			</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model.Project)
		{
			<tr>
				<td>
					<a asp-page="./Project" asp-route-id="@item.Id" class="btn btn-outline-primary">
						@Html.DisplayFor(modelItem => item.Name)
					</a>
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Description)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Created)
				</td>
			</tr>
		}
	</tbody>
</table>
